/*
 * 定义一个用于对数组获取最值的功能。 
 * 
 * 既然是用于操作数组，最好将这个功能添加到数组对象中。 
 * 可是用prototype原型来是实现。 
 * 
 * 
 */



function getMax(arr){
	
	var index = 0;
	for(var x=1; x<arr.length; x++){
		
		if(arr[x]>arr[index]){
			index = x;
		}
	}
	return arr[index];
}
